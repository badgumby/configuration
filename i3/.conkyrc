          "border": "\#FF0000",
          "border_bottom": 2,
          "border_top": 0,
          "border_right": 0,
          "border_left": 0
          },\
    ${endif}
${endif}

${if_up wlp59s0} {"full_text": " ${addr wlp59s0}","min_width": " 255.255.255.0","align": "center","color": "\#FFFFFF","border": "\#2ECC71","border_bottom": 2,"border_top": 0,"border_right": 0,"border_left": 0},${else}\
    {"full_text": " N/A  ","min_width": " N/A  ","align": "center","color": "\#FFFFFF","border": "\#FF0000","border_bottom": 2,"border_top": 0,"border_right": 0,"border_left": 0},\
${endif}

    {
      "full_text": "  ${fs_free /} ",
      "min_width": "  100.0G ",
      "name": "Root Volume Free",
      "align": "center",
      "color": "\#FFFFFF",
      "border": "\#42CBF4",
      "border_bottom": 2,
      "border_top": 0,
      "border_right": 0,
      "border_left": 0
    },
    {
      "full_text": "  ${exec echo `sensors -f system76-isa-0000 | grep "CPU temp"` | sed 's/CPU temperature://' | sed 's/+//'} ",
      "min_width": "  000.0°F ",
      "name": "CPU Temp",
      "align": "center",
      "color": "\#FFFFFF",
      "border": "\#42CBF4",
      "border_bottom": 2,
      "border_top": 0,
      "border_right": 0,
      "border_left": 0
    },
    {
      "full_text": " ${cpu cpu0}%",
      "min_width": " 100%",
      "name": "CPU Average",
      "align": "center",
