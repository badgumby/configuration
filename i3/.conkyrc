                { "full_text" : " <span fgcolor='\#EAE725'></span> ${battery_percent}% ${battery_time}","min_width": "  100%","name": "Battery","instance": "35-59%","align": "left","color" : "\#FFFFFF","markup": "pango" }, \
            ${endif}\
        ${else}\
